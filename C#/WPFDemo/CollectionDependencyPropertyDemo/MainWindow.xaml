<Window x:Class="CollectionDependencyPropertyDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollectionDependencyPropertyDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Name="Display" Grid.Row="0">
            </TextBlock>
            <Button Name="btnDisplay" Click="btnDisplay_Click"   Grid.Row="1" Width="30" Height="20" Background="#FF1E9791" BorderBrush="#FF111111" Foreground="#FFF7F1F1" >显示</Button>
    </Grid>
</Window>
