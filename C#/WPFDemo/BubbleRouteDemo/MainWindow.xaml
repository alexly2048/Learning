<Window x:Class="BubbleRouteDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BubbleRouteDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border BorderThickness="2" BorderBrush="CadetBlue" Padding="5,5,5,5">
        <StackPanel  Button.Click="bubbleEvent_Click" Orientation="Horizontal">
            <Button Name="btnYes" Content="Yes" Width="Auto" Height="Auto"></Button>
            <Button Name="btnNo" Content="No" Width="Auto" Height="Auto"></Button>
            <Button Name="btnCancel" Content="Cancel" Width="Auto" Height="Auto"></Button>
        </StackPanel>
    </Border>
</Window>
